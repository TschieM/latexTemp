% options
% math options
\DeclareOption{optLeftEquations}{\def\optLeftEquations{x}}%
\DeclareOption{optCenterEquations}{\def\optCenterEquations{x}}%
% bib options
\DeclareOption{optBiber}{\def\optBiber{x}}%
